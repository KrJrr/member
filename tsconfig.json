{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "resources/*": [
              "./resources/*"
          ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }